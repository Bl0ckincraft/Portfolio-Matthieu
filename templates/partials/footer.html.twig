<div class="footer">
    <!-- Retrieving next and previous route key -->
    {% set dictKeys = navigationRoutes|keys %}

    {% if app.request.attributes.get('_route') in dictKeys %}
        {% set currentIndex = 0 %}

        {% for key in dictKeys %}
            {% if app.request.attributes.get('_route') == key %}
                {% set currentIndex = loop.index - 1 %}
            {% endif %}
        {% endfor %}

        {% if currentIndex > 0 %}
            {% set previousKey = dictKeys[currentIndex - 1] %}
        {% else %}
            {% set previousKey = dictKeys[dictKeys|length - 1] %}
        {% endif %}

        {% if currentIndex + 1 < dictKeys|length %}
            {% set nextKey = dictKeys[currentIndex + 1] %}
        {% else %}
            {% set nextKey = dictKeys[0] %}
        {% endif %}
    {% else %}
        {% set previousKey = dictKeys[0] %}
        {% set nextKey = dictKeys[1] %}
    {% endif %}

    <div class="footer-navigation-section py-5 px-3 d-md-flex">
        <div class="col-md-6 my-5 d-flex flex-column text-center">
            <a class="mx-auto" href="{{ path(previousKey) }}">
                <div class="d-flex mb-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="29.657" viewBox="0 0 24 29.657">
                        <g id="Icon_ICON_feather_chevron-left_SIZE_LARGE_STYLE_STYLE3_" data-name="Icon [ICON=feather/chevron-left][SIZE=LARGE][STYLE=STYLE3]" transform="translate(0 2.828)">
                            <rect id="Area_ICON:feather_chevron-left_SIZE:LARGE_STYLE:STYLE3_" data-name="Area [ICON:feather/chevron-left][SIZE:LARGE][STYLE:STYLE3]" width="24" height="24" fill="#fcfcfc" opacity="0"/>
                            <g id="Icon" transform="translate(-1 -1)">
                                <path id="c2790cc7-423a-49a1-8b5a-b2f23fe3000c" d="M30,36,18,24,30,12" transform="translate(-11 -11)" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"/>
                            </g>
                        </g>
                    </svg>
                    <span class="me-auto indication ms-2">Précédent</span>
                </div>
                <div class="d-flex">
                    <span class="me-auto indication-title">{{ navigationRoutes[previousKey] }}</span>
                </div>
            </a>
        </div>
        <div class="col-md-6 my-5 d-flex flex-column text-center">
            <a class="mx-auto" href="{{ path(nextKey) }}">
                <div class="d-flex mb-2">
                    <span class="ms-auto indication me-2">Suivant</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="29.657" viewBox="0 0 24 29.657">
                        <g id="Icon_ICON_feather_chevron-right_SIZE_LARGE_STYLE_STYLE3_" data-name="Icon [ICON=feather/chevron-right][SIZE=LARGE][STYLE=STYLE3]" transform="translate(0 2.828)">
                            <rect id="Area_ICON:feather_chevron-right_SIZE:LARGE_STYLE:STYLE3_" data-name="Area [ICON:feather/chevron-right][SIZE:LARGE][STYLE:STYLE3]" width="24" height="24" fill="#fcfcfc" opacity="0"/>
                            <g id="Icon" transform="translate(-1 -1)">
                                <path id="c24a53d6-51c6-438e-8f27-d6b249155131" d="M18,36,30,24,18,12" transform="translate(-11 -11)" fill="none" stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="4"/>
                            </g>
                        </g>
                    </svg>
                </div>
                <div class="d-flex">
                    <span class="ms-auto indication-title">{{ navigationRoutes[nextKey] }}</span>
                </div>
            </a>
        </div>
    </div>
    <div class="footer-information-section py-5 px-3">
